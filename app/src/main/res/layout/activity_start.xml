<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iplab.neriwasabiseijin.paint3pointtouch.StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView 3point"
        android:id="@+id/button_grid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView 2point"
        android:id="@+id/button_2point"
        android:layout_below="@+id/button_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView LongTap"
        android:id="@+id/button_longTap"
        android:layout_below="@+id/button_2point"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView DoubleTap"
        android:id="@+id/button_doubleTap"
        android:layout_below="@+id/button_longTap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/debug_flag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="debug_flag"
        android:layout_below="@+id/button_doubleTap"/>

    <EditText
        android:id="@+id/subjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:ems="10"
        android:gravity="top|left"
        android:scrollHorizontally="true"
        android:text="test"
        android:textSize="20sp"
        android:background="#555555"
        android:textColor="#ffffff"
        android:layout_below="@+id/debug_flag"/>

    <CheckBox
        android:id="@+id/test_flag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="test_flag"
        android:checked="true"
        android:layout_below="@+id/subjectName"/>



</RelativeLayout>
