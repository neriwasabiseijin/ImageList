    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView 3point"
        android:id="@+id/button_grid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView 2point"
        android:id="@+id/button_2point"
        android:layout_below="@+id/button_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView LongTap"
        android:id="@+id/button_longTap"
        android:layout_below="@+id/button_2point"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageGridView DoubleTap"
        android:id="@+id/button_doubleTap"
        android:layout_below="@+id/button_longTap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <EditText
        android:id="@+id/subjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:ems="10"
        android:gravity="top|left"
        android:scrollHorizontally="true"
        android:text="test"
        android:textSize="20sp"
        android:background="#555555"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_doubleTap"/>

